<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            android:text="涛涛 回复了你的 XXX "
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginLeft="15dp"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pubTime"
            android:text="2016-01-01 11:11:11"
            android:textSize="12sp"
            android:textColor="#999"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:layout_below="@+id/info"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_alignLeft="@id/info"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="end"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/recyclerLine"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>