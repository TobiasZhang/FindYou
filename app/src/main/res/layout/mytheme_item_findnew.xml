<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_padding_left"
        android:layout_marginTop="@dimen/title_padding_top"
        android:layout_below="@id/actionbar"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_margin_5"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/notify_padding_top"
            android:layout_marginRight="@dimen/title_padding_left"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_large"
                android:layout_marginLeft="@dimen/text_size_margin_5"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/title_padding_left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@drawable/findnewtitle_shape"
                android:text="交友贴"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pubdate"
                android:gravity="center_vertical"
                android:textColor="@color/title_color"
                android:layout_alignParentRight="true"
                android:text="2016-06-06"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/notify_padding_top"
            android:layout_marginRight="@dimen/title_padding_left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/neirong"
                android:text="内容:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content"
                android:maxLines="5"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/neirong"
                android:layout_marginLeft="@dimen/text_size_margin_5"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/notify_padding_top"
            android:id="@+id/img"
            android:layout_marginRight="@dimen/title_padding_left"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/text_size_margin_5"
                android:id="@+id/img1"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/text_size_margin_5"
                android:id="@+id/img2"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/text_size_margin_5"
                android:id="@+id/img3"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/title_padding_left"
        android:layout_marginTop="@dimen/text_size_margin_5"
        android:layout_marginBottom="@dimen/text_size_margin_5"
        android:background="@color/colorText_Hint"></View>
</LinearLayout>