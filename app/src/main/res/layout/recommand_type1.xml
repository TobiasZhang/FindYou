                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/text_size_margin_5"
                android:id="@+id/img1"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/text_size_margin_5"
                android:id="@+id/img2"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/text_size_margin_5"
                android:id="@+id/img3"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/text_size_margin_5"
            android:layout_marginTop="@dimen/text_size_margin_5"
            android:background="@color/colorText_Hint"></View>
