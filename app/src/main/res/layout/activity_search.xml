<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="limeng.com.findyou.view.SearchActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:orientation="horizontal"
       android:gravity="bottom"
       android:id="@+id/title"
       android:background="@color/search_title">
       <LinearLayout
           android:layout_width="0dp"
           android:background="@drawable/search_background"
           android:layout_marginLeft="@dimen/text_size_margin_5"
           android:layout_height="30dp"
           android:gravity="center_vertical"
           android:layout_marginBottom="10dp"
           android:orientation="horizontal"
           android:layout_weight="5">
           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:scaleType="fitCenter"
               android:src="@drawable/search_icon"
               android:layout_height="20dp" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_weight="6"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_middle"
                android:hint="请输入姓名或经历/地点"
                android:id="@+id/content"
                android:textColorHint="@color/colorWhite"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="30dp"
           android:layout_marginBottom="10dp"
           android:orientation="horizontal"
           android:layout_marginLeft="@dimen/text_size_margin_5"
           android:layout_weight="1"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="取消"
               android:id="@+id/dispose"
               android:gravity="center"
               android:textColor="@color/colorWhite"/>
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/title">
        <widget.PullToLoaderRecylerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview"></widget.PullToLoaderRecylerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tip"
            android:visibility="gone"
            android:textColor="@color/colorText_Hint"
            android:textSize="@dimen/text_size_large"
            android:text="未查询到任何有关人员信息"/>
    </LinearLayout>

</RelativeLayout>
