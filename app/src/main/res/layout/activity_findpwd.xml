<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="limeng.com.findyou.view.Findpwd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/statu_height"
        android:id="@+id/stute"
        android:orientation="horizontal"
        android:background="@color/colorStatusBar"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stute"
        android:id="@+id/actionbar"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/back"
            android:background="@color/colorTitle"
            android:textColor="@color/colorWhite"
            android:paddingTop="@dimen/title_padding_top"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:text="＜"
            android:textSize="18sp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/title_padding_top"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:layout_gravity="center_vertical"
            android:text="找回密码"
            android:textColor="@color/colorWhite"
            android:background="@color/colorTitle"
            android:textSize="18sp"
            android:paddingLeft="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/actionbar"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:paddingBottom="5dp"
                android:layout_marginTop="13dp"
                android:textSize="16sp"/>
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="#cccccc"></View>
        </LinearLayout>
        <widget.MyEditText
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/title_padding_left"
            android:layout_height="50dp"
            android:textColorHint="#cccccc"
            android:layout_marginLeft="@dimen/title_padding_left"
            android:hint="请输入电话号"
            android:id="@+id/login_input_phone_et"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phone"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/get_code"
            android:background="@color/colorBtn_BG"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20sp"
            android:id="@+id/login_request_code_btn"
            android:textColor="@color/colorBtn_Font"
            android:textSize="14sp"/>
        <widget.MyEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:hint="请输入验证码"
            android:textColorHint="#cccccc"
            android:layout_marginRight="@dimen/title_padding_left"
            android:id="@+id/login_input_code_et"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tips"
        android:layout_below="@+id/pass"
        android:layout_marginTop="50dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/register_content"
        android:textSize="12sp"
        android:textColor="@color/colorText_Hint"
        android:layout_marginLeft="@dimen/title_padding_left"
        android:lineSpacingExtra="2dp"
        android:layout_marginRight="@dimen/title_padding_left"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="继续"
        android:id="@+id/login_commit_btn"
        android:background="@color/colorTitle"
        android:textColor="@color/colorText_Hint"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
