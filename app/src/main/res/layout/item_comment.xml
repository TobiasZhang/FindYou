<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >
    <ImageView
        android:id="@+id/headImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/app_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="火星网友"
        android:layout_alignTop="@+id/headImage"
        android:layout_toRightOf="@+id/headImage"
        android:layout_marginLeft="10dp"
        android:textColor="@color/hightlight_nickname"/>
    <TextView
        android:id="@+id/pubTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-01-01 21:01:10"
        android:layout_below="@id/nickname"
        android:layout_alignLeft="@id/nickname"
        android:layout_marginTop="3dp"
        android:textSize="12dp"
        />
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="勿忘国耻"
        android:textColor="@android:color/black"
        android:layout_below="@id/pubTime"
        android:layout_alignLeft="@id/nickname"
        android:layout_marginRight="10dp"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:lineSpacingExtra="6dp"
        />
    <RelativeLayout
        android:id="@+id/replyArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/content"
        android:layout_alignRight="@id/content"
        android:layout_below="@id/content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-5dp">
        <TextView
            android:id="@+id/replyComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="火星游客 2016-01-01 12:11:11\n顶！！顶！！！顶！！！顶！！！顶！！！顶！！！顶！！！顶！！！！"
            android:background="@color/comment_reply_area"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:lineSpacingExtra="6dp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/borderBottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/comment_divider"
        android:layout_below="@+id/replyArea"
        android:layout_alignLeft="@id/headImage"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>