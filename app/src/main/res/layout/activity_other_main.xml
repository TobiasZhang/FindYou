<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="limeng.com.findyou.view.FindActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/statu_height"
        android:id="@+id/stute"
        android:orientation="horizontal"
        android:background="@color/colorStatusBar"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stute"
        android:background="@color/colorTitle"
        android:id="@+id/actionbar"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/back"
            android:background="@color/colorTitle"
            android:textColor="@color/colorWhite"
            android:paddingTop="@dimen/title_padding_top"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:text="＜"
            android:textSize="18sp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/title_padding_top"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:layout_gravity="center_vertical"
            android:text="个人资料"
            android:textColor="@color/colorWhite"
            android:background="@color/colorTitle"
            android:textSize="18sp"
            android:paddingLeft="40dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/actionbar"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/photo_height"
                android:id="@+id/user_img"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:text="李孟"
                android:textSize="@dimen/text_size_large"
                android:layout_marginTop="@dimen/text_size_margin_5"
                android:layout_marginLeft="@dimen/title_padding_left"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/text_size_margin_5"
                android:layout_marginLeft="@dimen/title_padding_left"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_age"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="26"
                    android:background="@drawable/age_shape"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/user_sex"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="@dimen/title_padding_left"
                    android:src="@drawable/male_icon"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btnshape"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/add"
                    android:textColor="@android:color/white"
                    android:text="+加好友"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btnshape"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/makeConversation"
                    android:textColor="@android:color/white"
                    android:text="发起会话"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/title_padding_left"
                android:layout_marginTop="@dimen/text_size_margin_5"
                android:background="#cccccc"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:layout_marginTop="@dimen/text_size_margin_5"
                android:layout_marginLeft="@dimen/title_padding_left"
                android:text="他的经历"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/text_size_margin_5"
                android:layout_marginLeft="@dimen/title_padding_left"
                android:id="@+id/myinfo">
            <widget.MyGrideView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myExp"></widget.MyGrideView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:layout_marginTop="@dimen/text_size_margin_5"
                android:layout_marginLeft="@dimen/title_padding_left"
                android:text="我的兴趣"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_margintop"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:src="@drawable/sport_icon"
                    android:layout_marginLeft="@dimen/title_padding_left"
                    android:background="@color/sport_icon"/>
                <widget.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_icon_marginleft"
                    android:id="@+id/sport">
                </widget.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_margintop"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:src="@drawable/music_icon"
                    android:layout_marginLeft="@dimen/title_padding_left"
                    android:background="@color/mucis_icon"/>
                <widget.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_icon_marginleft"
                    android:id="@+id/music">
                </widget.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_margintop"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:src="@drawable/eat_icon"
                    android:layout_marginLeft="@dimen/title_padding_left"
                    android:background="@color/eat_icon"/>
                <widget.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_icon_marginleft"
                    android:id="@+id/eat">
                </widget.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_margintop"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:src="@drawable/television_icon"
                    android:layout_marginLeft="@dimen/title_padding_left"
                    android:background="@color/television_icon"/>
                <widget.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_icon_marginleft"
                    android:id="@+id/televsion">
                </widget.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_margintop"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:src="@drawable/book_icon"
                    android:layout_marginLeft="@dimen/title_padding_left"
                    android:background="@color/read_icon"/>
                <widget.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_icon_marginleft"
                    android:id="@+id/book">
                </widget.FlowLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/icon_margintop"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:src="@drawable/game_icon"
                    android:layout_marginLeft="@dimen/title_padding_left"
                    android:background="@color/travl_icon"/>
                <widget.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_icon_marginleft"
                    android:id="@+id/travl">
                </widget.FlowLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/other_final_bottom"
                android:layout_marginLeft="@dimen/title_padding_left"
                android:layout_marginBottom="@dimen/other_final_bottom"
                android:background="#cccccc"></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:layout_marginTop="@dimen/text_size_margin_5"
                android:layout_marginLeft="@dimen/title_padding_left"
                android:text="留言"/>
            <widget.MyGrideView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/search_item_icon_bottom"
                android:layout_marginLeft="@dimen/title_padding_left"
                android:id="@+id/leave_message"
                android:visibility="gone">
            </widget.MyGrideView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tips"
                android:text="当前暂无留言"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/colorText_Hint"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_btn_shape"
                android:layout_marginLeft="@dimen/title_padding_left"
                android:layout_marginRight="@dimen/title_padding_left"
                android:text="查看更多留言"
                android:visibility="gone"
                android:id="@+id/lookmore"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/colorText_Hint"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitle"
                android:layout_marginTop="@dimen/text_size_margin_5"
                android:gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/title_padding_left"
                    android:layout_marginTop="@dimen/text_size_margin_5"
                    android:layout_marginBottom="@dimen/text_size_margin_5"
                    android:id="@+id/comment"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/comment"
                    android:background="@drawable/add_btn_shape"
                    android:hint="请输入……"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/text_size_margin_5"
                    android:layout_marginBottom="@dimen/text_size_margin_5"
                    android:id="@+id/commit"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/add_btn_shape"
                    android:text="确定"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
