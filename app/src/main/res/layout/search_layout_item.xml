<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="40dp"
        android:layout_margin="@dimen/search_item_icon_bottom"
        android:layout_height="40dp"
        android:id="@+id/userimg"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitCenter"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_item_icon_bottom"
        android:id="@+id/name"
        android:textSize="@dimen/text_size_large"
        android:layout_toRightOf="@+id/userimg"
        android:text="张涛"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userimg"
        android:id="@+id/message"
        android:layout_below="@+id/name"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/male_icon"
            android:id="@+id/sex"/>
        <TextView
            android:layout_width="@dimen/age_background_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/search_item_icon_left"
            android:text="26"
            android:id="@+id/age"
            android:gravity="center"
            android:background="@drawable/age_shape"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/place"
            android:textColor="#6699ff"
            android:background="@drawable/place_shape"
            android:layout_marginLeft="@dimen/search_item_icon_left"/>
    </LinearLayout>
</RelativeLayout>