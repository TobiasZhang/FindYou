<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="limeng.com.findyou.view.FindSameHobby">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/statu_height"
        android:id="@+id/stute"
        android:orientation="horizontal"
        android:background="@color/colorStatusBar"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stute"
        android:id="@+id/actionbar"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/back"
            android:background="@color/colorTitle"
            android:textColor="@color/colorWhite"
            android:paddingTop="@dimen/title_padding_top"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:text="＜"
            android:textSize="18sp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/title_padding_top"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:layout_gravity="center_vertical"
            android:text="寻找同好"
            android:textColor="@color/colorWhite"
            android:background="@color/colorTitle"
            android:textSize="18sp"
            android:paddingLeft="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/title_padding_left"
        android:layout_marginTop="@dimen/title_padding_top"
        android:layout_below="@id/actionbar"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/title_padding_left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="标题:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_marginLeft="@dimen/text_size_margin_5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/title_padding_left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="内容:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content"
                android:gravity="left"
                android:background="@drawable/edittext_shape_style"
                android:lines="8"
                android:layout_marginLeft="@dimen/text_size_margin_5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/title_padding_left"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:id="@+id/l1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="＋点击添加图片"
                    android:layout_marginRight="@dimen/text_size_margin_5"
                    android:gravity="center"
                    android:id="@+id/tip1"
                    android:background="@drawable/img_des_shape"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/img1"
                    android:visibility="gone"
                    android:background="@drawable/book_shape"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/text_size_margin_5"
                    android:layout_height="70dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img1_des"
                    android:textSize="@dimen/text_size_middle"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:text="描述1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:id="@+id/l2"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="＋点击添加图片"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/text_size_margin_5"
                    android:id="@+id/tip2"
                    android:background="@drawable/img_des_shape"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/img2"
                    android:layout_marginRight="@dimen/text_size_margin_5"
                    android:background="@drawable/book_shape"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:layout_height="70dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img2_des"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/text_size_middle"
                    android:visibility="gone"
                    android:text="描述2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:id="@+id/l3"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="＋点击添加图片"
                    android:gravity="center"
                    android:id="@+id/tip3"
                    android:background="@drawable/img_des_shape"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/img3"
                    android:layout_marginRight="@dimen/text_size_margin_5"
                    android:background="@drawable/book_shape"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:layout_height="70dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img3_des"
                    android:textSize="@dimen/text_size_middle"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:text="描述3"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="继续"
        android:id="@+id/login_commit_btn"
        android:background="@color/colorTitle"
        android:textColor="@color/colorText_Hint"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
