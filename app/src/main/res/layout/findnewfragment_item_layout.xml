<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_padding_left"
        android:layout_marginTop="@dimen/title_padding_top"
        android:layout_below="@id/actionbar"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/title_padding_left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_marginTop="@dimen/title_padding_top"
                android:gravity="center"
                android:textColor="@color/findnewtitle"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_large"
                android:layout_marginLeft="@dimen/text_size_margin_5"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/title_padding_left"
            >
            <ImageView
                android:layout_width="@dimen/user_icon_height"
                android:layout_height="@dimen/user_icon_width"
                android:scaleType="fitXY"
                android:id="@+id/user_img"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:layout_toRightOf="@+id/user_img"
                android:layout_marginTop="@dimen/name_img"
                android:layout_marginLeft="@dimen/text_size_margin_5"
                android:text="limeng"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pubdate"
                android:layout_marginTop="@dimen/name_img"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="2016-06-06"
                android:layout_marginLeft="@dimen/text_size_margin_5"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/title_padding_left"
            android:layout_marginTop="@dimen/text_size_margin_5"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/title_padding_top"
                android:text="内容:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content"
                android:maxLines="1"
                android:layout_marginTop="@dimen/title_padding_top"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/text_size_margin_5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/img"
            android:layout_marginRight="@dimen/title_padding_left"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/text_size_margin_5"
                android:id="@+id/img1"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/text_size_margin_5"
                android:id="@+id/img2"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/text_size_margin_5"
                android:id="@+id/img3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>