<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/statu_height"
        android:id="@+id/stute"
        android:orientation="horizontal"
        android:background="@color/colorStatusBar"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stute"
        android:id="@+id/actionbar"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/back"
            android:background="@color/colorTitle"
            android:textColor="@color/colorWhite"
            android:paddingTop="@dimen/title_padding_top"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:text="＜"
            android:textSize="18sp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/title_padding_top"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:layout_gravity="center_vertical"
            android:text="帖子详情"
            android:textColor="@color/colorWhite"
            android:background="@color/colorTitle"
            android:textSize="18sp"
            android:paddingLeft="40dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/truecontent"
        android:layout_below="@id/actionbar"
        android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        android:textSize="@dimen/title_large_size"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second_title"
        android:layout_below="@+id/newsTitle">
        <ImageView
            android:layout_width="@dimen/user_icon_width"
            android:layout_height="@dimen/user_icon_height"
            android:id="@+id/userimg"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/pubIns"
            android:layout_marginLeft="@dimen/notify_padding_top"
            android:layout_marginTop="@dimen/notify_padding_top"
            android:layout_toRightOf="@+id/userimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新华网"
            />
        <TextView
            android:id="@+id/pubTime"
            android:layout_marginTop="@dimen/notify_padding_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-10-10 12:12:12"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_below="@+id/second_title"
        android:layout_marginBottom="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:id="@+id/linename"
            android:layout_marginTop="@dimen/text_size_margin_5"
            android:layout_marginRight="@dimen/title_padding_left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="姓名:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/text_size_large"
                android:layout_marginLeft="@dimen/text_size_margin_5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linename"
            android:id="@+id/lineage"
            android:layout_marginTop="@dimen/other_final_bottom"
            android:layout_marginRight="@dimen/title_padding_left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:text="性别:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sex"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/text_size_large"
                android:layout_marginLeft="@dimen/text_size_margin_5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aimExp"
            android:layout_below="@+id/lineage"
            android:background="@drawable/white_btn_shape"
            android:layout_margin="10dp"
            android:orientation="vertical"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aimExp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/imgGroup"
        >
        <ImageView
            android:id="@+id/newsImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_img_height"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/newsImgDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="123123123"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/newsImg2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_img_height"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/newsImgDesc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="123123123"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/newsImg3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_img_height"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/newsImgDesc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:visibility="gone"
            android:text="123123123"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/newsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123333333333333333333331222222222222222222222333122222222222222222222231222222222222222222222"
        android:textSize="@dimen/text_size_middle"
        android:layout_below="@id/imgGroup"
        android:layout_marginTop="8dp"
        android:lineSpacingMultiplier="1.3"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsContent"
            android:gravity="center"
            android:id="@+id/comment"
            android:text="点击评论"
            android:background="@drawable/turn_to_comment_btn"
            android:layout_marginTop="@dimen/notify_padding_top"/>
    </RelativeLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone"
        android:layout_below="@+id/actionbar"
        android:id="@+id/tip"
        android:text="当前帖子不存在或已经被发布者删除"/>
</RelativeLayout>
